<h1>Posts</h1>
<% @posts.each do |post| %>
<h2><%=  link_to post.title, post%></h2>

<p><%=post.body%>
  <% if (post.user_email==@cur_user.email) %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%end%>
<p>Submitted by <strong><%=@cur_user.email%> </strong> <strong><%=time_ago_in_words(post.created_at)%></strong></p>
<%end%>
